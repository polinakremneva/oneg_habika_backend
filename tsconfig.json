{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "build"]
}
