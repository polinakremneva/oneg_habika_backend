{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./public/assets",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
